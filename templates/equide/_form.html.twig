<div class="container is-widescreen">
    <br>
    <!-- formulaire avec titre, description, prix, typeannonce -->
    {{ form_start(formEquide) }}
    <br>
    <div class="columns">
        <div class="column">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">Nom de l'équidé : </label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control">
                            <input name="{{ field_name(formEquide.nom) }}"  placeholder="Entrer le nom de votre équidé" class="input is-warning"/>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label"> Date naissance : </label>
                </div>
        <div class="field-body">
            <div class="field">
                <p class="control">
                    <input class="input is-warning" name="{{ field_name(formEquide.datenaiss) }}" type="date" placeholder="Warning input">
                </p>
            </div>
        </div>
            </div>
        </div>
    </div>
    <div class="columns">
    <div class="column">
        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label"> Robe : </label>
            </div>
            <div class="select is-warning">
                <select name="{{ field_name(formEquide.robe) }}">
                    {% for robe in  listRobes %}
                        <option value="{{ field_value(formEquide.robe) }}"> {{ robe.libelle }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
    <div class="column">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label"> Race : </label>
                </div>
                <div class="select is-warning">
                    <select name="{{ field_name(formEquide.race) }}">
                        {% for race in  listRaces %}
                            <option value="{{ field_value(formEquide.race) }}"> {{ race.libelle }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    <div class="column">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label"> Taille (cm): </label>
                </div>
                {# Nom de l'équide #}
                <div class="field-body">
                    <div class="field">
                    <input type="number" class="input is-warning" name="{{ field_name(formEquide.taille) }}" min=40" max="200" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">URL du cheval (haras nationaux): </label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control">
                            <input name="{{ field_name(formEquide.lienhn) }}"  placeholder="https://infochevaux.ifce.fr/fr/etc.." class="input is-warning"/>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="control">
                <div class="field-label is-normal">
                    <label class="label">Type équidé : </label>
                </div>
                {% for typeEquide in  listTypeEquide %}

                    <input type="radio" name="answer" name="{{ field_name(formEquide.idtypeeq) }}" value="{{ typeEquide.idtypeequide }}">
                    <label> {{ typeEquide.libelle }}</label>
                {% endfor %}
            </div>
        </div>
    </div>
    {{ form_end(formEquide) }}
</div>

