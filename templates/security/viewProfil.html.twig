{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <img src="{{ asset('img/connexion.png') }}">
    <div class="container">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectés en tant que {{ app.user.userIdentifier }},
        </div>

    {% endif %}

        <div class="columns">
            <div class="column is-half">
                <button class="button is-warning">Gérer mes annonces</button>
            </div>
            <div class="column">
                <button class="button is-warning">Modifier mes infos de profil</button>
            </div>
        </div>
        <div class="columns">
            <div class="column is-half">
                <a href="{{ path('security/app_logout') }}">Déconnexion</a>
            </div>
            <form method="post">
            <div class="column">
                <a href="{{ path('app_delete', {'idutilisateur': app.user.idutilisateur}) }}">Supprimer mon compte</a>
            </div>
            </form>
        </div>
            <br>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
<br>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</div>
    </form>
{% endblock %}