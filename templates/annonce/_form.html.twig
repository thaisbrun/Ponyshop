
<div class="container is-widescreen">
    <br>
    {% for message in app.session.flashBag.get('erreur') %}
        <div class="message is-danger">
            <div class="message-header">
            {{ message }}
            </div>
        </div>
    {% endfor %}
    {{ form_start(annonceForm) }}
    <div class="columns">
        <div class="column">
            {{ form_row(annonceForm.images, {'label' : "Télécharger des fichiers :",'attr': {'multiple': 'multiple'}}) }}
        </div>
        <br>
        <div class="column">
            {{ form_row(annonceForm.titre) }}
        </div>
        <div class="column">
            {{form_row(annonceForm.equide.nom, {'attr': {'class' : 'input is-primary', 'placeholder' : 'Veuillez choisir un nom'}}) }}
        </div>
    </div>
    <div class="columns">
        <div class="column">
            {{ form_row(annonceForm.equide.datenaiss, {'label' : "Date de naissance : ",'attr': {'class' : 'input is-primary'}}) }}
        </div>
        <div class="column">
            {{ form_row(annonceForm.equide.race, {'label' : "Race : ","placeholder" : "Veuillez sélectionner une race ", 'attr': {'class' : 'input is-primary'}}) }}
        </div>
        <div class="column">
            {{ form_row(annonceForm.equide.robe, {'label' : "Robe : ","placeholder" : "Veuillez sélectionner une robe ", 'attr': {'class' : 'input is-primary'}}) }}
        </div>
    </div>
    <div class="columns">
        <div class="column">
            {{ form_row(annonceForm.equide.taille, {'label' : "Taille : ",'attr': {'class' : 'input is-primary', 'min' : 1, 'placeholder' : 'Veuillez choisir une taille (en cm)'}}) }}
        </div>
    <div class="column">
        {{ form_row(annonceForm.equide.typeeq,{'label' : "Type de l'équidé : ", "placeholder" : "Veuillez sélectionner un type de l'équidé ", 'attr': {'class' : 'input is-primary', }}) }}
    </div>
    </div>
    <div class="columns">
        <div class="column">
            {{ form_row(annonceForm.prix) }}
        </div>
        <div class="column">
            {{ form_row(annonceForm.equide.lienhn, {'label' : "Lien web Haras Nationaux : ",'attr': {'class' : 'input is-primary', 'placeholder' : 'Veuillez joindre un lien haras nationaux'}}) }}
        </div>
    </div>
    <div class="columns">
        <div class="column">
            {{ form_row(annonceForm.typea) }}
        </div>
        <div class="column">
            {{ form_row(annonceForm.equide.dep, {'label' : "Département : ","placeholder" : "Veuillez sélectionner un département ", 'attr': {'class' : 'input is-primary'}}) }}
        </div>
    </div>
    {{ form_row(annonceForm.description) }}
    <br>

    <button type="submit" class="button is-primary">{{ button_label }}</button>
    {{ form_rest(annonceForm) }}
    {{ form_errors(annonceForm) }}
    {{ form_end(annonceForm) }}
</div>

